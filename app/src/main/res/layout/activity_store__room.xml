<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".store_Room">


    <TextView
        android:id="@+id/textViewa1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="C     |     C++     |     Python     |     Java"
        android:textSize="17sp"
        />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="70dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView28">


        <LinearLayout
            android:id="@+id/vl1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageButton

                android:id="@+id/cg_btn"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginStart="8dp"
                android:background="#00ffffff"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/wsn" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="CARICATURE\nGALLERY"
                android:textColor="#F2FFE9"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vl2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageButton

                android:id="@+id/moc_btn"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginStart="8dp"
                android:background="#00ffffff"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/cheesecakes" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="CHEESECAKE\nSHOTS"
                android:textColor="#F2FFE9"
                android:textSize="20sp"/>

        </LinearLayout>

    </LinearLayout>



    <ImageButton
        android:id="@+id/feedbackbtn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="#00ffffff"
        android:layout_marginTop="50dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll1"
        app:srcCompat="@drawable/chbtn" />




</androidx.constraintlayout.widget.ConstraintLayout>