            </LinearLayout>

            <LinearLayout
                android:id="@+id/text_exp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/exp2"
                app:layout_constraintStart_toEndOf="@+id/exp2"
                app:layout_constraintTop_toTopOf="@+id/exp2">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Co-Founder"
                    android:textSize="20sp"
                    android:textColor="#DADBBD"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No More Boring Chocolates"
                    android:textColor="#FDCEB9"
                    android:textSize="18sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textColor="#6EBF8B"
                    android:text="Aug 2017 - Present"
                    android:textStyle="bold" />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/text_exp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/exp3"
                app:layout_constraintStart_toEndOf="@+id/exp3"
                app:layout_constraintTop_toTopOf="@+id/exp3">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
