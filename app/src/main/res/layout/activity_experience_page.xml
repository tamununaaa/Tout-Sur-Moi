                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Sep 2020 - Nov 2020" />




            </LinearLayout>

            <LinearLayout
                android:id="@+id/text_exp5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/exp5"
                app:layout_constraintStart_toEndOf="@+id/exp5"
                app:layout_constraintTop_toTopOf="@+id/exp5">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Facilitator-Prod Ops"
                    android:textColor="#DADBBD"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FDCEB9"
                    android:text="The Climber"
                    android:textStyle="italic"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/textView13"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#6EBF8B"
                    android:text="May 2020 - Sep 2020" />




            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/text_exp5"
                app:layout_constraintStart_toStartOf="parent"/>









        </androidx.constraintlayout.widget.ConstraintLayout>



    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>